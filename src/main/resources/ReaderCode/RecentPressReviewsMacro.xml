<guid>4ac1e1c3-9c65-4577-bc93-2e788831f93c</guid>
<property>
<code>{{velocity}}
#set($query = "from doc.object(ReaderCode.PressReviewClass) as pr")
#if("$!{context.macro.params.space}" != '')
  #set($query = "${query} where doc.space='${context.macro.params.space}'")
#end
#set($prs = $services.query.xwql($query).setLimit(5).execute())
#if($prs.size() == 0)
{{warning}}
$msg.get('reader.pr.pressReviewListEmpty')
{{/warning}}
#else

{{html wiki=true}}
&lt;ul class="xlist"&gt;
  #foreach($pr in $prs)
  &lt;li class="xitem"&gt;
    &lt;img src="${xwiki.getSkinFile('icons/silk/report.gif')}" /&gt;
    [[$xwiki.getDocument($pr).displayTitle&gt;&gt;$pr]]
  &lt;/li&gt;
  #end
&lt;/ul&gt;

#if("$!{context.macro.params.allPressReviews}" != '')
  #if("$!{context.macro.params.space}" != '')
  //[[$msg.get('reader.pr.viewAllPressReviewsForSpace', [$context.macro.params.space])&gt;&gt;$context.macro.params.allPressReviews]]//
  #else
  //[[$msg.get('reader.pr.viewAllPressReviews')&gt;&gt;$context.macro.params.allPressReviews]]//
  #end
#end
{{/html}}

#end
{{/velocity}}</code>
